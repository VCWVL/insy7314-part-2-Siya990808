{
  "name": "secure-banking-portal-backend",
  "version": "1.0.0",
  "description": "Secure international banking payment portal backend with EXCEEDS STANDARD security",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:clean && npm run build:compile",
    "build:clean": "rm -rf dist",
    "build:compile": "babel . --out-dir dist --ignore node_modules,tests,coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "npm run test:security:audit && npm run test:security:lint && npm run test:security:dependencies",
    "test:security:audit": "npm audit --audit-level=high",
    "test:security:lint": "eslint . --ext .js --max-warnings 0",
    "test:security:dependencies": "npm run security:snyk",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:security": "eslint . --ext .js --config .eslintrc.security.json",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "security:snyk": "snyk test --severity-threshold=high",
    "security:snyk:monitor": "snyk monitor",
    "security:retire": "retire --severity medium",
    "security:nsp": "nsp check",
    "security:helmet-check": "node scripts/helmet-check.js",
    "security:ssl-check": "node scripts/ssl-check.js",
    "security:rate-limit-test": "node scripts/rate-limit-test.js",
    "security:full-scan": "npm run security:audit && npm run security:snyk && npm run security:retire && npm run lint:security",
    "docker:build": "docker build -t banking-portal-backend .",
    "docker:run": "docker run -p 5001:5001 banking-portal-backend",
    "docker:security-scan": "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $PWD:/tmp/.trs-ci trivy image banking-portal-backend",
    "prestart": "npm run security:audit",
    "prebuild": "npm run lint && npm run test:security",
    "postinstall": "npm run security:audit",
    "healthcheck": "node healthcheck.js"
  },
  "keywords": [
    "banking",
    "security",
    "payments",
    "SWIFT",
    "encryption",
    "authentication",
    "express"
  ],
  "author": "INSY7314 Student",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-brute": "^1.0.1",
    "express-brute-mongoose": "^1.1.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "https": "^1.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "validator": "^13.11.0",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-anti-trojan-source": "^1.1.1",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "nsp": "^3.2.1",
    "retire": "^4.0.3",
    "snyk": "^1.1270.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!dist/**",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "ignore": [
      "node_modules/",
      "coverage/",
      "dist/",
      "*.test.js"
    ]
  },
  "security": {
    "advisories": {
      "ignore": []
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/secure-banking-portal.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/secure-banking-portal/issues"
  },
  "homepage": "https://github.com/yourusername/secure-banking-portal#readme"
}
