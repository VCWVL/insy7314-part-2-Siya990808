{
  "name": "secure-banking-portal-backend",
  "version": "1.0.0",
  "description": "Backend for secure banking portal",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:pipeline": "jest --ci --coverage --reporters=default --reporters=jest-junit --outputFile=test-results/jest/junit.xml",
    "security:audit": "npm audit",
    "ci:setup": "if not exist test-results\\jest mkdir test-results\\jest && if not exist test-results\\newman mkdir test-results\\newman",
    "lint": "echo 'No linting configured'",
    "newman": "newman run postman/banking-collection.json --env-var \"HOST=localhost:5000\" --env-var \"PROTOCOL=http\" --env-var \"TEST_PASSWORD=%TEST_PASSWORD%\" --reporters cli,junit --reporter-junit-export test-results/newman/newman.xml"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "controllers/**/*.js",
      "middleware/**/*.js",
      "server.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "newman": "^6.2.1",
    "supertest": "^6.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-session": "^1.17.3",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.3.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0"
  }
}